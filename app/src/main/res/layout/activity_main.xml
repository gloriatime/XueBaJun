<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main_layout"
    tools:context="com.example.gloria.myapplication.MainActivity">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/blue"
    android:orientation="horizontal">

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/icon_personal_message"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_gravity="center_vertical"
        android:id="@+id/user_management_button"
        />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="@dimen/large"
        android:layout_gravity="center_vertical"
        android:gravity="end"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:textColor="@color/brown"
        />


</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Spinner
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:id="@+id/spinner"
            android:spinnerMode="dropdown"
            android:popupBackground="@android:color/white"
            android:background="@drawable/icon_pull"
            android:layout_marginStart="40dp"
            android:layout_gravity="center_vertical"

            />

        <TextView
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="课程"
            android:textSize="@dimen/title"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            />

        <!--<SearchView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/search_box"
            android:iconifiedByDefault="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/bg_fillet"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            ></SearchView>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:background="@drawable/bg_fillet">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:id="@+id/search_box"
                android:background="@null"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="30dp"
                android:cursorVisible="false"
                />

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/icon_search"
                android:layout_marginStart="-30dp"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageButton
                android:id="@+id/event_image_button"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/pic_event"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="5dp">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="75dp"
                    android:id="@+id/paper"
                    android:background="@drawable/icon_paper"
                    android:layout_marginTop="20dp"
                    />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/course"
                    android:background="@drawable/icon_course"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="35dp" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/book"
                    android:background="@drawable/icon_book"
                    android:layout_marginTop="28dp"
                    android:layout_marginStart="35dp"/>

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/square"
                    android:background="@drawable/icon_square"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="28dp"
                    android:layout_marginStart="35dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-17dp">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:id="@+id/text_paper"
                    android:text="资料"
                    android:textSize="@dimen/title"
                    android:layout_marginStart="5dp"/>

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:id="@+id/text_course"
                    android:text="课程"
                    android:textSize="@dimen/title"
                    android:layout_marginStart="40dp"/>

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:id="@+id/text_book"
                    android:text="书籍"
                    android:textSize="@dimen/title"
                    android:layout_marginStart="35dp"/>

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:id="@+id/text_square"
                    android:text="广场"
                    android:textSize="@dimen/title"
                    android:layout_marginStart="35dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="170dp"
                android:layout_height="20dp"
                android:text="为您推荐"
                android:background="@color/red"
                android:gravity="center"
                android:textSize="@dimen/common"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="学习资料"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/title"
                    android:textColor="@color/brown"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:text="查看更多 >> "
                    android:gravity="right"
                    android:textColor="@color/red"/>

                <!--学习资料列表-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="《学吧君需求规格说明书》"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="上传：无题"
                        android:layout_weight="1"
                        android:gravity="right"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="2018-7-15"
                        android:layout_weight="2"
                        android:gravity="right"/>

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="书籍"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/title"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:textColor="@color/brown"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:text="查看更多 >> "
                    android:gravity="right"
                    android:textColor="@color/red"/>

                <!--书目列表-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="《围城》"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="作者：钱钟书"
                        android:gravity="end"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="《丰乳肥臀》"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="作者：莫言"
                        android:gravity="end"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="《白夜行》"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="作者：东野圭吾"
                        android:gravity="end"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>

    <!-- 左边栏布局 -->

    <LinearLayout
        android:id="@+id/left_drawable"
        android:layout_width="@dimen/drawable_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/head_image_button"
            android:layout_width="@dimen/head_image_size"
            android:layout_height="@dimen/head_image_size"
            android:layout_marginTop="24dp"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:background="@drawable/ic_head_image"
            android:src="@drawable/bg_circle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_bar_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_weight="7"
                android:text="我好菜啊"
                android:textSize="@dimen/title"
                android:textColor="@color/brown"/>

            <Button
                android:id="@+id/check_in_button"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:background="@drawable/bg_fillet_red"
                android:text="签  到"
                android:textColor="@color/white"
                android:textSize="@dimen/common" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/info_bar_height"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_weight="7"
                android:text="积分 :" />

            <TextView
                android:id="@+id/point_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:text="100" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/info_bar_height"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_weight="7"
                android:text="年级 :" />

            <TextView
                android:id="@+id/grade_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:text="大一" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/info_bar_height"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_weight="7"
                android:text="学院 :" />

            <TextView
                android:id="@+id/college_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:text="计算机学院" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/info_bar_height"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_weight="7"
                android:text="兴趣 :" />

            <TextView
                android:id="@+id/interest_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_weight="2"
                android:text="理、文、艺、乐、医、管、农" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_bar_height"
            android:orientation="horizontal"
            android:id="@+id/upload_doc_linear"
            android:layout_marginTop="@dimen/activity_vertical_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传文档"
                android:textSize="@dimen/title"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_weight="7"/>
            <ImageView
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:src="@drawable/ic_jump"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_bar_height"
            android:orientation="horizontal"
            android:id="@+id/my_concern_linear"
            android:layout_marginTop="@dimen/small_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的关注"
                android:textSize="@dimen/title"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_weight="7"/>
            <ImageView
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:src="@drawable/ic_jump"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_bar_height"
            android:orientation="horizontal"
            android:id="@+id/my_collect_linear"
            android:layout_marginTop="@dimen/small_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的收藏"
                android:textSize="@dimen/title"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_weight="7"/>
            <ImageView
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:src="@drawable/ic_jump"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_bar_height"
            android:orientation="horizontal"
            android:id="@+id/change_info_linear"
            android:layout_marginTop="@dimen/small_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更改"
                android:textSize="@dimen/title"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_weight="7"/>
            <ImageView
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:src="@drawable/ic_jump"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_bar_height"
            android:orientation="horizontal"
            android:id="@+id/about_me_linear"
            android:layout_marginTop="@dimen/small_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于我的"
                android:textSize="@dimen/title"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_weight="7"/>
            <ImageView
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:src="@drawable/ic_jump"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
