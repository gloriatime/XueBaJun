<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">
    <RelativeLayout
        android:id="@+id/notzero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <!--教师照片-->
        <RelativeLayout
            android:id="@+id/notseczero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/teacherimage"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:contentDescription="@string/teacherimg"
                android:layout_marginTop="10dp"/>
            <Button
                android:id="@+id/score"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_below="@id/teacherimage"
                android:background="@drawable/biankuang_pf"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:text="@string/setSC">

            </Button>
        </RelativeLayout>
        <!--教师所教授课程-->
        <RelativeLayout
            android:id="@+id/zero"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/biankuang"
            android:layout_toEndOf="@id/notseczero"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp">
            <TextView
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/mainteach"
                android:textSize="20sp" />

            <Button
                android:id="@+id/courseone"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_below="@id/one"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/biankuang_bt" />

            <Button
                android:id="@+id/coursetwo"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_below="@id/courseone"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/biankuang_bt"/>
            <Button
                android:id="@+id/coursethree"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_below="@id/coursetwo"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/biankuang_bt"/>
            <Button
                android:id="@+id/coursefour"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_below="@id/coursethree"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/biankuang_bt"/>
            <Button
                android:id="@+id/coursefive"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_below="@id/coursefour"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/biankuang_bt"/>
            <Button
                android:id="@+id/coursesix"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_below="@id/coursefive"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/biankuang_bt" />
        </RelativeLayout>
    </RelativeLayout>
    <!--教师简介-->
    <RelativeLayout
        android:id="@+id/ten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/biankuang"
        android:layout_marginTop="20dp"
        android:layout_below="@id/notzero"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:text="@string/intrpeople">
        </TextView>
        <TextView
            android:id="@+id/peopleintro"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/three">
        </TextView>
        <TextView
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:layout_below="@id/peopleintro"
            android:text="@string/research"
            android:layout_marginTop="10dp">
        </TextView>
        <TextView
            android:id="@+id/researchin"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_below="@id/four"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
        </TextView>
    </RelativeLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#000000"
        android:layout_below="@id/ten"
        android:layout_marginTop="10dp"
        />
    <!--给评论预留的-->
    <RelativeLayout
        android:id="@+id/five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ten"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/textViewSay"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_weight="0"
            android:layout_marginLeft="10dp"
            android:background="@drawable/comment_start_shape"
            android:gravity="center"
            android:text="写评论"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        <TextView
            android:id="@+id/textViewComment"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="comments"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginRight="29dp"
            android:layout_marginEnd="29dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/eight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/five">
        <ListView
            android:id="@+id/teacher_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ></ListView>
    </RelativeLayout>
</RelativeLayout>