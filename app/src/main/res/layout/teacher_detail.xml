<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue"
        android:orientation="horizontal"
        android:id="@+id/bar">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:background="@drawable/ic_back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="教师"
            android:textSize="22sp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/brown"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="280dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/notzero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <!--教师照片-->
            <RelativeLayout
                android:id="@+id/notseczero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/teacherimage"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="40dp"
                    android:contentDescription="@string/teacherimg" />

                <TextView
                    android:id="@+id/fourty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/teacherimage"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/setscore"
                    android:textSize="@dimen/common" />

                <TextView
                    android:id="@+id/seescore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/teacherimage"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/fourty"
                    android:textColor="@color/red"
                    android:textSize="@dimen/common" />

                <Button
                    android:id="@+id/score"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/fourty"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/biankuang_pf"
                    android:text="@string/setSC"
                    android:textColor="@color/white"
                    android:textSize="15sp"></Button>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="10dp"
                android:layout_height="wrap_content"></RelativeLayout>
            <!--教师所教授课程-->
            <RelativeLayout
                android:id="@+id/zero"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/notseczero"
                android:background="@drawable/biankuang">

                <TextView
                    android:id="@+id/one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/mainteach"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/courseone"
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/one"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/biankuang_bt" />

                <Button
                    android:id="@+id/coursetwo"
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/courseone"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/biankuang_bt" />

                <Button
                    android:id="@+id/coursethree"
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/coursetwo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/biankuang_bt" />

                <Button
                    android:id="@+id/coursefour"
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/coursethree"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/biankuang_bt" />

                <Button
                    android:id="@+id/coursefive"
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/coursefour"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/biankuang_bt" />

                <Button
                    android:id="@+id/coursesix"
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/coursefive"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/biankuang_bt" />
            </RelativeLayout>
        </LinearLayout>
    <!--教师简介-->
    <RelativeLayout
        android:id="@+id/ten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/biankuang"
        android:layout_marginTop="20dp"
        android:layout_below="@id/notzero"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:text="@string/intrpeople">
        </TextView>
        <TextView
            android:id="@+id/peopleintro"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/three">
        </TextView>
        <TextView
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:layout_below="@id/peopleintro"
            android:text="@string/research"
            android:layout_marginTop="10dp">
        </TextView>
        <TextView
            android:id="@+id/researchin"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_below="@id/four"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
        </TextView>
    </RelativeLayout>

