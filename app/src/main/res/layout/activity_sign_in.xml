<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    tools:context="com.example.gloria.myapplication.SignIn.SignInActivity"
    android:background="@drawable/bg_sign_page4"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.constraint.Placeholder
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="4"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="360px"
        android:layout_height="120px"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="学吧！君"
        android:textSize="30sp"
        android:layout_weight="1"/>

    <android.support.constraint.Placeholder
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="1"/>


     <EditText
         android:id="@+id/editText2"
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:layout_marginTop="50dp"
         android:layout_marginStart="@dimen/large"
         android:layout_marginEnd="@dimen/large"
         android:inputType="textPersonName"
         android:hint="请输入手机号"
         android:background="@drawable/bg_fillet_white"
         android:gravity="center"
         android:layout_weight="1"
         />


    <EditText
        android:id="@+id/editText4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/large"
        android:layout_marginStart="@dimen/large"
        android:layout_marginEnd="@dimen/large"
        android:inputType="textPersonName"
        android:hint="请输入密码"
        android:background="@drawable/bg_fillet_white"
        android:gravity="center"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_margin="@dimen/small_margin"
        android:gravity="center"
        android:layout_weight="3">



        <CheckBox
            android:id="@+id/cbRemember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/rememberpsw"
            android:textSize="@dimen/common" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" | "
            android:textColor="@color/white"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_marginStart="@dimen/small_margin"/>

        <TextView
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登      录"
            android:textColor="#ffffff"
            android:textSize="@dimen/title" />


    </LinearLayout>

    <TextView

        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="注   册"
        android:textColor="@color/white"
        android:textSize="@dimen/common"
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        android:layout_weight="1"/>

    <!--<EditText
