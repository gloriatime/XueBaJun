<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">
    <!-- 课程概况 -->
<RelativeLayout
    android:id="@+id/zero"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/biankuang"
    android:layout_marginTop="20dp"
    android:layout_centerHorizontal="true"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">
    <!-- 课程名 -->
    <TextView
        android:id="@+id/one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/coursename"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/course_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/one" />
    <!-- 优选学期 -->
    <TextView
        android:id="@+id/four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prefersemester"
        android:layout_below="@id/one"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/course_prefersemester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/four"
        android:layout_alignTop="@id/four"/>
    <!-- 开课时间
    <TextView
        android:id="@+id/five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/CSuggestion"
        android:layout_below="@id/four"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/course_ctime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/five"
        android:layout_alignTop="@id/five"/>-->
    <!-- 任课老师 -->
    <RelativeLayout
        android:id="@+id/twentyone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/four">
    <TextView
        android:id="@+id/six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/teaching"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:textSize="20dp"/>
     <Button
         android:id="@+id/teacher_one"
         android:layout_width="120dp"
         android:layout_height="25dp"
         android:background="@drawable/biankuang_bt"
         android:textSize="15sp"
         android:textColor="@color/white"
         android:text="@string/teacher_one"
         android:layout_toEndOf="@id/six"
         android:layout_alignTop="@id/six"
         android:layout_marginStart="5dp" />
     <Button
         android:id="@+id/teacher_two"
         android:layout_width="120dp"
         android:layout_height="25dp"
         android:background="@drawable/biankuang_bt"
         android:textSize="15sp"
         android:textColor="@color/white"
         android:text="@string/teacher_two"
         android:layout_toEndOf="@id/teacher_one"
         android:layout_alignTop="@id/six"
         android:layout_marginStart="10dp"
         />
     <Button
         android:id="@+id/teacher_three"
         android:layout_width="120dp"
         android:layout_height="25dp"
         android:background="@drawable/biankuang_bt"
         android:textSize="15sp"
         android:textColor="@color/white"
         android:text="@string/teacher_three"
         android:layout_toEndOf="@id/teacher_two"
         android:layout_alignTop="@id/six"
         android:layout_marginStart="10dp" />
    </RelativeLayout>
    <TextView
        android:id="@+id/eight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setscore"
        android:layout_below="@id/twentyone"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/setscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/eight"
        android:layout_alignTop="@id/eight"/>
    <Button
        android:id="@+id/givescore"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:background="@drawable/biankuang_pf"
        android:textSize="@dimen/common"
        android:text="@string/setSC"
        android:textColor="@color/white"
        android:layout_below="@id/eight"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"/>
</RelativeLayout>
    <!--书籍封面-->
    <RelativeLayout
        android:id="@+id/twentytwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/zero"
        android:layout_gravity="center_horizontal">
    <ImageView
        android:id="@+id/bookimage"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:contentDescription="@string/bookcover"
        android:layout_marginTop="20dp"/>
    <!--书籍介绍-->
    <RelativeLayout
        android:id="@+id/nine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/biankuang"
        android:layout_toEndOf="@id/bookimage"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textbook"
            android:layout_marginStart="10dp"
            android:textSize="20dp"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/textbbook"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:background="@drawable/biankuang_bt"
            android:layout_toEndOf="@id/ten"
            android:layout_marginStart="10dp"
            android:layout_alignTop="@id/ten"/>
        <TextView
            android:id="@+id/introducebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ten"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>
    </RelativeLayout>
    <!--给评论预留的-->
    <RelativeLayout
        android:id="@+id/eleven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/biankuang"
        android:layout_below="@id/twentytwo"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewSay"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_weight="0"
                android:layout_marginLeft="10dp"
                android:background="@drawable/comment_start_shape"
                android:gravity="center"
                android:text="写评论"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textViewComment"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="comments"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_marginRight="29dp"
                    android:layout_marginEnd="29dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

        </LinearLayout>
        <ListView
            android:id="@+id/comment_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>

