<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue"
        android:orientation="horizontal"
        android:id="@+id/bar">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:background="@drawable/ic_back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="课程"
            android:textSize="22sp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/brown"
            />

    </LinearLayout>

    <!-- 课程概况 -->
<RelativeLayout
    android:id="@+id/zero"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/biankuang"
    android:layout_marginTop="20dp"
    android:layout_centerHorizontal="true"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_below="@id/bar">
    <!-- 课程名 -->
    <RelativeLayout
        android:id="@+id/theone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/coursename"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/course_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/one"
        android:layout_alignBaseline="@id/one"
        android:textSize="20dp"/>
      </RelativeLayout>
    <!-- 优选学期 -->
    <RelativeLayout
        android:id="@+id/thetwo"
        android:layout_below="@id/theone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prefersemester"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/course_prefersemester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/four"
        android:layout_alignBaseline="@id/four"
        android:textSize="20dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/twentyone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/thetwo">
    <TextView
        android:id="@+id/six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/teaching"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:textSize="20dp"/>
     <Button
         android:id="@+id/teacher_one"
         android:layout_width="100dp"
         android:layout_height="25dp"
         android:background="@drawable/biankuang_bt"
         android:textSize="15sp"
         android:textColor="@color/white"
         android:text="@string/teacher_one"
         android:layout_toEndOf="@id/six"
         android:layout_marginStart="5dp"
        />
     <Button
         android:id="@+id/teacher_two"
         android:layout_width="100dp"
         android:layout_height="25dp"
         android:background="@drawable/biankuang_bt"
         android:textSize="15sp"
         android:textColor="@color/white"
         android:text="@string/teacher_two"
         android:layout_toEndOf="@id/teacher_one"
         android:layout_marginStart="10dp"
         />
     <Button
         android:id="@+id/teacher_three"
         android:layout_width="100dp"
         android:layout_height="25dp"
         android:background="@drawable/biankuang_bt"
         android:textSize="15sp"
         android:textColor="@color/white"
         android:text="@string/teacher_three"
         android:layout_toEndOf="@id/teacher_two"
         android:layout_marginStart="10dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/thethree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/twentyone">
    <TextView
        android:id="@+id/eight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setscore"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/setscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/eight"
        android:layout_centerVertical="true"
        android:textColor="@color/red"
        android:layout_alignBaseline="@id/eight"/>
    </RelativeLayout>
    <Button
        android:id="@+id/givescore"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:background="@drawable/biankuang_pf"
        android:textSize="@dimen/common"
        android:text="@string/setSC"
        android:textColor="@color/white"
        android:layout_below="@id/thethree"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"/>
</RelativeLayout>
    <!--书籍封面-->
    <RelativeLayout
        android:id="@+id/twentytwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/zero"
        android:layout_gravity="center_horizontal">
    <ImageView
        android:id="@+id/bookimage"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:contentDescription="@string/bookcover"
        android:layout_marginTop="20dp"/>
    <!--书籍介绍-->
    <RelativeLayout
        android:id="@+id/nine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/biankuang"
        android:layout_toEndOf="@id/bookimage"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textbook"
            android:layout_marginStart="10dp"
            android:textSize="20dp"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/textbbook"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:background="@drawable/biankuang_bt"
            android:layout_below="@id/ten"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/introducebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textbbook"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:text="@string/introducetextbook"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/IntroB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/introducebook"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="@dimen/common"
            android:layout_marginStart="10dp"/>
    </RelativeLayout>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/bar_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/common"
        android:layout_below="@id/twentytwo"
        android:layout_marginTop="@dimen/small_margin">
        <TextView
            android:id="@+id/textViewDownloadPic"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/download"
            android:text="" />

        <TextView
            android:id="@+id/textViewDownload"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:background="@drawable/textview_shape"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginRight="20dp"
            android:text="下载"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textViewFavoritePic"
            android:layout_width="30dp"
            android:layout_height="32dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/favorite_before"
            android:text="" />

        <TextView
            android:id="@+id/textViewFavorite"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:background="@drawable/textview_shape"
            android:layout_marginTop="8dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="收藏"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textViewSharePic"
            android:layout_width="28dp"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/share"
            android:text="" />

        <TextView
            android:id="@+id/textViewShare"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:background="@drawable/textview_shape"
            android:gravity="center"
            android:text="分享"
            android:layout_marginTop="8dp"
            android:layout_marginRight="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#ffffff" />
    </LinearLayout>

    <!--给评论预留的-->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#000000"
        android:layout_below="@id/twentytwo"
        android:layout_marginTop="10dp"
        />
    <RelativeLayout
        android:id="@+id/ch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/twentytwo"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/textViewSay"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_weight="0"
            android:layout_marginLeft="10dp"
            android:background="@drawable/comment_start_shape"
            android:gravity="center"
            android:text="写评论"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        <TextView
            android:id="@+id/textViewComment"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="comments"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginRight="29dp"
            android:layout_marginEnd="29dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ch_eight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ch">
        <ListView
            android:id="@+id/comment_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ></ListView>
    </RelativeLayout>
</RelativeLayout>

