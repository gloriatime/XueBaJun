<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">
    <!-- 课程概况 -->
<RelativeLayout
    android:id="@+id/zero"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/biankuang"
    android:layout_marginTop="20dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginStart="30dp">
    <!-- 课程名 -->
    <TextView
        android:id="@+id/one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/coursename" />
    <TextView
        android:id="@+id/course_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/one" />
    <!-- 优选学期 -->
    <TextView
        android:id="@+id/four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prefersemester"
        android:layout_below="@id/one"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/course_prefersemester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/four"
        android:layout_alignTop="@id/four"/>
    <!-- 开课时间
    <TextView
        android:id="@+id/five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/CSuggestion"
        android:layout_below="@id/four"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/course_ctime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/five"
        android:layout_alignTop="@id/five"/>-->
    <!-- 任课老师 -->
    <TextView
        android:id="@+id/six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/teaching"
        android:layout_below="@id/four"
        android:layout_marginTop="5dp"/>
     <Button
         android:id="@+id/teacher_one"
         android:layout_width="75dp"
         android:layout_height="20dp"
         android:background="@drawable/biankuang_bt"
         android:textSize="15sp"
         android:textColor="@color/white"
         android:text="@string/teacher_one"
         android:layout_toEndOf="@id/six"
         android:layout_alignTop="@id/six"
         android:layout_marginStart="5dp"/>
     <Button
         android:id="@+id/teacher_two"
         android:layout_width="75dp"
         android:layout_height="20dp"
         android:background="@drawable/biankuang_bt"
         android:textSize="15sp"
         android:textColor="@color/white"
         android:text="@string/teacher_two"
         android:layout_toEndOf="@id/teacher_one"
         android:layout_alignTop="@id/six"
         android:layout_marginStart="10dp"/>
     <Button
         android:id="@+id/teacher_three"
         android:layout_width="75dp"
         android:layout_height="20dp"
         android:background="@drawable/biankuang_bt"
         android:textSize="15sp"
         android:textColor="@color/white"
         android:text="@string/teacher_three"
         android:layout_toEndOf="@id/teacher_two"
         android:layout_alignTop="@id/six"
         android:layout_marginStart="10dp"/>
    <!-- 考核方式
    <TextView
        android:id="@+id/seven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/examiningmode"
        android:layout_below="@id/six"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/course_examiningmode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/seven"
        android:layout_alignTop="@id/seven" />-->
    <!-- 评分 -->
    <TextView
        android:id="@+id/eight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setscore"
        android:layout_below="@id/six"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/setscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/eight"
        android:layout_alignTop="@id/eight"/>
    <Button
        android:id="@+id/givescore"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:background="@drawable/biankuang_pf"
        android:textSize="15sp"
        android:text="@string/setSC"
        android:textColor="@color/white"
        android:layout_toEndOf="@id/setscore"
        android:layout_alignTop="@id/eight"
        android:layout_marginStart="30dp" />
</RelativeLayout>
    <!--书籍封面-->
    <ImageView
        android:id="@+id/bookimage"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:contentDescription="@string/bookcover"
        android:layout_below="@id/zero"
        android:layout_marginTop="20dp"/>
    <!--书籍介绍-->
    <RelativeLayout
        android:id="@+id/nine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/biankuang"
        android:layout_alignTop="@id/bookimage"
        android:layout_toEndOf="@id/bookimage"
        android:layout_marginStart="10dp" >
        <TextView
            android:id="@+id/ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textbook" />
        <Button
            android:id="@+id/textbbook"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:background="@drawable/biankuang_bt"
            android:layout_toEndOf="@id/ten"
            android:layout_marginStart="10dp"
            android:layout_alignTop="@id/ten"/>
        <TextView
            android:id="@+id/introducebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ten"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>
    <!--给评论预留的-->
    <RelativeLayout
        android:id="@+id/eleven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/biankuang"
        android:layout_below="@id/bookimage">
    </RelativeLayout>
</RelativeLayout>

